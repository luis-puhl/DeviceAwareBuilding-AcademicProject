keywords = {Attenuators,Bluetooth,Cellular phones,Context,Context-aware services,Costs,Energy consumption,RSSI,Signal design,Ubiquitous computing,Videoconference,acceptability,access point,attenuators,cost,error rate reduction,indoor location sensing,indoor radio,location awareness,mobility management (mobile radio),power consumption,received signal strength indicator,reference model based approach,signal strength based location sensing,ubiquitous computing,variable attenuators},
pages = {319--322},
publisher = {IEEE},
